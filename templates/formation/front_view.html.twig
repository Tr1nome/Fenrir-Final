{% extends 'base.html.twig'%}

{% block body %}
	<div id="carouselExampleFade" class="carousel slide carousel-fade" data-ride="carousel">
		<div class="carousel-inner">
			<div class="carousel-item active">
				<img src="https://www.otos.top/wp-content/uploads/revslider/home5/placeholder-1200x500.png" class="d-block w-100" alt="...">
			</div>
			<div class="carousel-item">
				<img src="https://www.otos.top/wp-content/uploads/revslider/home5/placeholder-1200x500.png" class="d-block w-100" alt="...">
			</div>
		</div>
		<a class="carousel-control-prev" href="#carouselExampleFade" role="button" data-slide="prev">
			<span class="carousel-control-prev-icon" aria-hidden="true"></span>
			<span class="sr-only">Previous</span>
		</a>
		<a class="carousel-control-next" href="#carouselExampleFade" role="button" data-slide="next">
			<span class="carousel-control-next-icon" aria-hidden="true"></span>
			<span class="sr-only">Next</span>
		</a>
	</div>
	<section class="blog-section spad">
		<div class="container">
		<h1 style="color:white;margin-bottom:30px;">Les formations en cours</h1>
			<div class="row">
				{% for formation in formations %}
					<div class="col-md-4">
						<div class="blog-post">
							<img src="/images/formations/{{ formation.filename }}" alt="">
							<div class="post-date">{{ formation.createdAt | date('\\L\\e\\ d/m/Y')}}</div>
							<h4>{{ formation.name }}</h4>
							<div class="post-metas">
								<img style="border-radius:50%;width:20px;height:20px;margin:0px;" src="/images/users/{{ formation.teacher.filename}}"/>
								<div class="post-meta">Par {{ formation.teacher.username }}
								</div>

							</div>
							<p style="color:white;">{{ formation.description }}</p>
							<a href="{{ path('formation_show', {'id': formation.id })}}" class="read-more">En savoir plus</a>
						</div>
					</div>
					{% else %}
					<p style="color:white;margin-left:20px;">Aucune formation n'est dispensée pour le moment</p>
				{% endfor %}
			</div>
			<hr style="background-color:white;">
			<h1 style="color:white;margin-bottom:30px;margin-top:50px;">Les formations passés</h1>
			<div class="row">
				{% for formation in pastformations %}
					<div class="col-md-4">
						<div class="blog-post">
							<img src="/images/formations/{{ formation.filename }}" style="filter: grayscale(100%) opacity(30%);" alt="">
							<div class="post-date-past">{{ formation.createdAt | date('\\L\\e\\ d/m/Y')}}</div>
							<h4>{{ formation.name }}</h4>
							<div class="post-metas">
								<img style="border-radius:50%;width:20px;height:20px;margin:0px;" src="/images/users/{{ formation.teacher.filename}}"/>
								<div class="post-meta">Par {{ formation.teacher.username }}
								</div>

							</div>
							<p style="color:white;">{{ formation.description }}</p>
							<a href="{{ path('formation_show', {'id': formation.id })}}" class="read-more-past">En savoir plus</a>
						</div>
					</div>
					{% else %}
					<div class="d-flex justify-content-center"><p style="color:white">Aucune formation passée</p></div>
				{% endfor %}
			</div>
		</div>
	</section>
{% endblock %}
